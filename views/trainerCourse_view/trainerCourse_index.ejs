<div class="container-fluid">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Trainer-Course</h6>
      </div>
      <div class="card-body">
        <a href="/staff/assignTrainer">
          <button type="button" class="btn btn-primary btn-sm">
            <i class="fas fa-plus-circle"></i> Assign Trainer to Course
          </button>
        </a>
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTable"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th scope="col">Trainer</th>
                <th scope="col">Course</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% trainerCourses.forEach(function(trainerCourse) { %>
              <tr>
                <td><%= trainerCourse.Trainer.fullname %></td>
                <td><%= trainerCourse.Course.name %></td>

  
                <td>
                  <div>
                    <a href="/staff/removeTrainerCourse/<%= trainerCourse.trainerId%>/<%= trainerCourse.courseId%>">
                      <button type="button" class="btn btn-secondary btn-sm">
                        <i class="fas fa-user-minus"></i> Delete
                      </button>
                    </a>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>