<div class="container-fluid">
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Course Category</h6>
    </div>
    <div class="card-body">
      <a href="/staff/createCategory">
        <button type="button" class="btn btn-primary btn-sm">
          <i class="fas fa-plus-circle"></i> Create Course Category
        </button>
      </a>
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable1"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Descriptions</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach(function(category) { %>
            <tr>
              <th scope="row"><%= category.id %></th>
              <td><%= category.name %></td>
              <td><%= category.descriptions %></td>
              <td>
                <div>
                  <a href="/staff/updateCategory/<%= category.id %>">
                    <button type="button" class="btn btn-primary btn-sm">
                      <i class="fas fa-user-edit"></i> Update
                    </button>
                  </a>
                </div>
                <div>
                  <a href="/staff/deleteCategory/<%= category.id %>">
                    <button type="button" class="btn btn-secondary btn-sm">
                      <i class="fas fa-user-minus"></i> Delete
                    </button>
                  </a>
                </div>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
