<div class="container-fluid">
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Trainer Account</h6>
    </div>
    <div class="card-body">
      <!-- <a href="/admin/createStaff">
        <button type="button" class="btn btn-primary btn-sm">
          <i class="fas fa-plus-circle"></i> Training Staff account
        </button>
      </a> -->
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">username</th>
              <th scope="col">Created At</th>
              <th scope="col">Updated At</th>
              <th scope="col">Details</th>
              <th scope="col">Update</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% trainerAccounts.forEach(function(trainerAccount) { %>
            <tr>
              <th scope="row"><%= trainerAccount.id %></th>
              <td><%= trainerAccount.username %></td>
              <td><%= trainerAccount.createdAt %></td>
              <td><%= trainerAccount.updatedAt %></td>

              <td>
                <div>
                  <a
                    href="/admin/viewTrainerAccount?id=<%= trainerAccount.id %> "
                  >
                    <button type="button" class="btn btn-warning btn-sm">
                      <i class="fas fa-user-tag"></i> View
                    </button>
                  </a>
                </div>
              </td>
              <td>
                <div>
                  <a href="/admin/updateTrainer/<%= trainerAccount.id %>">
                    <button type="button" class="btn btn-primary btn-sm">
                      <i class="fas fa-user-edit"></i> Update
                    </button>
                  </a>
                </div>
              </td>
              <td>
                <div>
                  <a
                    href="/admin/deleteTrainerAccount?id=<%= trainerAccount.id %> "
                  >
                    <button type="button" class="btn btn-secondary btn-sm">
                      <i class="fas fa-user-minus"></i> Delete
                    </button>
                  </a>
                </div>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
