<div class="container-fluid">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Trainee account</h6>
      </div>
      <div class="card-body">
        <!-- <a href="/admin/createStaff">
          <button type="button" class="btn btn-primary btn-sm">
            <i class="fas fa-plus-circle"></i> Training Staff account
          </button>
        </a> -->
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTable"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">username</th>
                <th scope="col">Created At</th>
                <th scope="col">Updated At</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% traineeAccounts.forEach(function(traineeAccount) { %>
              <tr>
                <th scope="row"><%= traineeAccount.id %></th>
                <td><%= traineeAccount.username %></td>
                <td><%= traineeAccount.createdAt %></td>
                <td><%= traineeAccount.updatedAt %></td>
  
                <td>
                  <div>
                    <a href="/staff/viewAccount?id=<%= traineeAccount.id %> ">
                      <button type="button" class="btn btn-primary btn-sm">
                        <i class="fas fa-user-edit"></i> View
                      </button>
                    </a>
                  </div>
  
                  <div>
                    <a href="">
                      <button type="button" class="btn btn-primary btn-sm">
                        <i class="fas fa-user-edit"></i> Update
                      </button>
                    </a>
                  </div>
                  <div>
                    <a href="/staff/deleteTraineeAccount?id=<%= traineeAccount.id %> ">
                      <button type="button" class="btn btn-secondary btn-sm">
                        <i class="fas fa-user-minus"></i> Delete
                      </button>
                    </a>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  